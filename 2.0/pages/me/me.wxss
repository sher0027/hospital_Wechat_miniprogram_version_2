/* pages/me/me.wxss */
page {
  background: #f7f7f7;
}

.show {
  width: 658rpx;
  background-image: linear-gradient(180deg, #ffffff 0%, #fcfdff 8%, #eff7ff 100%);
  border-radius: 29rpx;
  margin: 18rpx 26rpx 0;
  padding: 0 20rpx 24rpx;
  display: flex;
  flex-direction: column;
}

.show .btn-edit {
  background-color: #fcfdff;
  padding: 0%;
  margin: 0%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.show .card {
  padding-top: 27rpx;
  padding-bottom: 34rpx;
  background-color: #ffffff;
  border-radius: 29rpx;
  display: flex;
  flex-direction: column;
}

.show .card .btn-all {
  background-color: #ecf5fe;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0%;
  margin: 0%;
}

.show .card .btn-functionList {
  padding: 0%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: transparent;
}

.show .card .btn-me {
  background-color: #ffffff;
  margin: 0%;
  padding: 0%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.show .card .btn-help {
  width: inherit;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.show .card .btn-help .btn-help-img {
  width: 45rpx;
  height: 45rpx;
  margin-right: 18rpx;
}

.show .card .btn-help .btn-help-title {
  font-size: 29rpx;
  font-weight: normal;
}

.show .card .btn-help .btn-help-hint {
  font-size: 25rpx;
	font-weight: normal;
  color: #8e8e8e;
}