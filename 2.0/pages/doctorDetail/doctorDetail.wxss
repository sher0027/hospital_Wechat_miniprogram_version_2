/* pages/doctorDetail/doctorDetail.wxss */
page {
  background: #f7f7f7;
}

.title {
  font-size: 33rpx;
  font-weight: normal;
  line-height: 35rpx;
}

.card {
  width: 652rpx;
  background-color: #ffffff;
  border-radius: 29rpx;
  margin: 40rpx 27rpx;
  padding: 22rpx;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}

.card .card-label {
  width: 82rpx;
  height: 34rpx;
  background-color: rgba(213, 213, 213, 0.5);
  border-radius: 13rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 13rpx;
}

.card .btn-consulate {
  border-radius: 18rpx;
  background-color: #3793fd;
  padding: 0rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 50rpx 0rpx 5rpx;
}